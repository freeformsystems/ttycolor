#!/usr/bin/env node

var ttycolor = require('..');
var ansi = ttycolor.ansi;
console.log('console.log: TERM %s',
  ansi(process.env.TERM).white().bg().black());
console.log('console.log: TERM_PROGRAM %s',
  ansi(process.env.TERM_PROGRAM).white().bg().black().reverse());
console.log('console.log: %s',
  ansi('white on black looks nice in the solarized color scheme')
    .white().bg().black());
console.log('console.log: sometimes just %s a word with a background is useful',
  ansi('highlighting')
    .black().bg().white());
console.log('console.log: %s values draw attention to the eye',
  ansi('bright').bright().white());
console.log('console.log: but really an %s is cleaner',
  ansi('underline').white().underline());
var colors = ttycolor.colors;
var methods = ['log', 'info', 'warn', 'error'], i = 0, method;
methods = methods.concat(methods);
methods.push('log');
colors.forEach(function(color) {
  method = methods[i++];
  console[method]('console.%s: %s color can be nice too',
    method,  ansi(color)[color]());
});

//console.log('console.log: %s values draw attention to the eye',
  //ansi('bright').bright());
//console.log('console.log: but really an %s is cleaner',
  //ansi('underline').underline());

// no colors, normal console operation
//console.log('%s', 'value');
//console.log('%d', 3.14);
//console.log('%j', {message: 'json'});
//console.log('a %s of %d with %j', 'value', 3.14, {message: 'json'});

