var colors = ttycolor.colors;
colors.shift();
var methods = ['log', 'info', 'warn', 'error'], i = 0, method;
methods = methods.concat(methods);
colors.forEach(function(color) {
  method = methods[i++];
  console[method]('console.%s: %s color',
    method,  ansi(color)[color]());
});

i = 0;
colors.forEach(function(color) {
  method = methods[i++];
  console[method]('console.%s: %s color',
    method,  ansi(color).bg[color]());
});

console.log('console.log: %s', ansi('bright').bright);
console.info('console.info: %s', ansi('underline').underline);
console.warn('console.warn: %s', ansi('reverse').white().bg.black().reverse);
//console.log(ansi('reverse').underline.white().bg.black().bright);
//console.log(ansi('bright underline').underline.bright);
console.error('console.error: %s', ansi('bright underline').underline.bright)
//console.dir(ttycolor.debug(ansi('bright underline').underline.bright));

